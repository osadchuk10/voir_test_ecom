<style>
 .image-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50px
}

.top-row,
.bottom-row {
  display: flex;
  justify-content: center;
}

.image {
  position: relative;
  overflow: hidden;
  cursor: pointer;
  width: 400px; 
  height: 400px; 
  transition: transform 0.3s;
}

.image-inner {
  position: relative;
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 100%;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.instagram-icon {
  font-size: 24px;
  color: white;
  text-decoration: none;
}



.overlay:hover {
  opacity: 1;
}
</style>
